
<div class="row">
  <div class="col s10 offset-s1">
    <h3>Meals</h3>
    <form {{action 'createMeal' on="submit"}}>
          Set the name:
          <div class="input-field">
            {{input type="text" value=name}}
            <label>Name</label>
          </div>
      <button class="waves-effect waves-light btn">Create</button>
    </form>
  </div>
</div>
<div class="row">
  {{#each model as |meal|}}
  <div class="col 4">
    {{#simple-card item=meal as |mealName edit delete|}}
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{mealName}}</span>
        </div>
        <div class="card-action">
        {{link-to edit 'auth.meals.detail' meal}}
        <button class="waves-effect waves-light btn" {{action 'deleteMeal' meal}}>{{delete}}</button>
        </div>
      </div>
    {{/simple-card}}
  </div>
  {{/each}}
</div>
