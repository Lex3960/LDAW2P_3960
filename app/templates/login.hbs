<div class="row">
  <form class="col s12" {{action 'login' on='submit'}}>
    <div class="row">
      <div class="input-field col s4">
        <i class="material-icons prefix">account_circle</i>
        {{input type="text" value=username}}
        <label for="icon_prefix">Username</label>
      </div>
      <div class="input-field col s4">
        <i class="material-icons prefix">lock</i>
        {{input type="password" class="validate" value=password}}
        <label for="icon_telephone">Password</label>
      </div>
      <div class="input-field col s4">
        <button class="waves-effect waves-light btn"><i class="material-icons right">send</i>Login</button>
      </div>
    </div>
  </form>
</div>
